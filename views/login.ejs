<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("layouts/head.ejs")%>
</head>
    <%-include("layouts/navbar.ejs")%>
    

    <div class='container'>
        <div class='row mt-5'>
          <div class='col-6 mx-auto mb-5'>

            <form action="/createlogin" method="post">
                
              <div class='card shadow p-3'>
                <div class='card-header' style="background-color:#039EE3">
                  <h4 style="text-align: center; margin-top: 10px; color: gold;"><%=message%></h4>
                  <h3 class='text-center' style="color:#FFFFFF">Login</h3>
                </div>
                <div class='card-body'>
                  <div class='row'>
                    <div class='col-12'>
                      <div class='form-group'>
                        <label class='form-label'><strong>Email</strong></label>
                        <input type="email" name="email" class='form-control' required />
                      </div>
                    </div>
                    <div class='col-12'>
                      <div class='form-group'>
                        <label class='form-label'><strong>Password</strong></label>
                        <input type="password" name="password" class='form-control' required />
                      </div>
                    </div>
                  </div>
                </div>
                <div class='card-footer' style="background-color:#000000">
                  <button class='btn btn-info btn-sm' style="background-color:#039EE3">Login</button>
                  
                  <p class='mt-2' style="color:#FFFFFF">
                    Don't have an account? <a href="/register" style="color:#FFFFFF">Register here</a>
                  </p>

                </div>
              </div>
            </form>
          </div>
        </div>
    </div>


    <%-include("layouts/footer.ejs")%>
    <%-include("layouts/foot.ejs")%>
</body>
</html>