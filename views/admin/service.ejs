<!DOCTYPE html>
<html lang="en">

<!-- ======= Head ======= -->
<%-include("layouts/head.ejs")%>
<!-- ======= End Head ======= -->
<body>
  <!-- ======= Header ======= -->
  <%-include("layouts/header.ejs")%>
  <!-- ======= End Header ======= -->



  <!-- ======= Sidebar ======= -->
  <%-include("layouts/sidebar.ejs")%>
  <!-- ======= End Sidebar ======= -->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Services</h1>
      <a href="/admin/addservice" class="btn btn-success">Add Service</a>
      
    </div><!-- End Page Title -->


    <% if (message && message.length > 0) { %>
      <h5 style="color: #012970; text-align: center;"><%=message%></h5>
  <% } %>

  <% if (error && error.length > 0) { %>
    <h5 style="color: rgb(231, 10, 10); text-align: center;"><%=error%></h5>
<% } %>

    <section class="section dashboard">
        <div class="row">
          <div class="col-lg-12">
            <table class="table datatable" style="margin-top: 20px;">
              <thead>
                  <tr>
                      <th scope="col">Services</th>
                      <th scope="col">Description</th>
                      <th scope="col">Image</th>
                      <th scope="col">Status</th>
                      <th colspan="2">Operations</th>
                  </tr>
              </thead>
              <tbody>
                  <% for (let datas of data) { %>
                      <tr>
                          <td><%= datas.service_name %></td>
                          <td><%= datas.des %></td>
                          <td><img src="/<%= datas.image %>" alt="Service Image" height="70px" width="70px"></td>
                         
                          <td>
                            <a href="/admin/sbutton/<%= datas._id %>" class="btn <%= !datas.isActive ? 'btn-danger' : 'btn-success' %>">
                                <%= !datas.isActive ? 'Inactive' : 'Active' %>
                            </a>
                        </td>
                        
                          <td>
                              <a href="/admin/editservice/<%= datas._id %>" class="btn btn-primary">Edit</a>
                              <a href="/admin/delete/<%= datas._id %>" class="btn btn-danger" style="margin-left: 5px;">Delete</a>
                          </td>
                      </tr>
                  <% } %>
              </tbody>
          </table>
          
          </div>
        </div>
      </section>
      

  </main>


<div style="margin-top: 300px;"></div>


  <!-- ======= Footer ======= -->
  <%-include("layouts/footer.ejs")%>
  <!-- ======= End Footer ======= -->



  <!-- ======= Scripts ======= -->
  <%-include("layouts/scripts.ejs")%>
  <!-- ======= End Scripts ======= -->

  

</body>

</html>
   
